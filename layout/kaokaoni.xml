<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg101"
    android:orientation="vertical" >

    <Button
        android:id="@+id/kaokaoback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pink"
        android:text="返回" />

    <TextView
        android:id="@+id/kaokaocontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
      <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/button1kaokao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:button="@null"
            android:checked="false"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="10dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/button2kaokao"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="10dp"
            android:text="RadioButton" />
        <RadioButton
            android:id="@+id/button3kaokao"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="10dp"
            android:text="RadioButton" />
        <RadioButton
            android:id="@+id/button4kaokao"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@android:drawable/btn_radio"
            android:paddingLeft="10dp"
            android:text="RadioButton" />

    </RadioGroup>

     

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >

          <TextView
              android:id="@+id/textkaokao"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:text="TextView" />

      </RelativeLayout>

</LinearLayout>